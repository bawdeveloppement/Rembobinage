{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "System",
    "properties": {
        "name": {
            "type": "string"
        },
        "components": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "callbacks": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "$comment": "Name of the callback"
                        },
                        "actions": {
                            "name": {
                                "type": "string",
                                "$comment": "Name of the component"
                            },
                            "data": {
                                "type": "array",
                                "items": [
                                    {
                                        "type": "string"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    }
}